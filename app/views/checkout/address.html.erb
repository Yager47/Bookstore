
<div class="row">
  <h1>
    <div class="col-md-4">Checkout</div>
    <div class="col-md-8">
      <small><strong>ADDRESS</strong> | DELIVERY | PAYMENT | CONFIRM | COMPLETE</small>  
    </div>
  </h1>
</div>

<div class="row">
  <div class="col-md-4">
    <h3>BILLING ADDRESS</h3>
  </div>

  <div class="col-md-4"></div>
  
  <div class="col-md-4">
    <h3>ORDER SUMMARY</h3>
  </div>
</div>

<div class="row">
  <%= form_for @order, url: wizard_path, method: :put do |order_form| %>
    <div class="col-md-4">
      <%= order_form.fields_for :billing_address do |billing_address_fields| %>
        <div class="field">
          <%= billing_address_fields.label :first_name %><br>
          <%= billing_address_fields.text_field :first_name, value: @order.user.first_name %>
        </div>

        <div class="field">
          <%= billing_address_fields.label :last_name %><br>
          <%= billing_address_fields.text_field :last_name, value: @order.user.last_name %>
        </div>          

        <div class="field">
          <%= billing_address_fields.label :street %><br>
          <%= billing_address_fields.text_field :street %>
        </div>

        <div class="field">
          <%= billing_address_fields.label :city %><br>
          <%= billing_address_fields.text_field :city %>
        </div>

        <div class="field">
          <%= billing_address_fields.label :country %><br>
          <%= billing_address_fields.select(:country, options_for_select(@countries, 1)) %>
        </div>

        <div class="field">
          <%= billing_address_fields.label :zipcode %><br>
          <%= billing_address_fields.text_field :zipcode %>
        </div>

        <div class="field">
          <%= billing_address_fields.label :phone %><br>
          <%= billing_address_fields.text_field :phone %>
        </div>
      <% end %>
      
      <br>
      
      <div class="actions">
        <%= order_form.submit 'Save & Continue' %>
      </div>
    </div>

    <div class="col-md-4">
      <%= order_form.fields_for :shipping_address do |shipping_address_fields| %>
        <div class="field">
          <%= shipping_address_fields.label :first_name %><br>
          <%= shipping_address_fields.text_field :first_name, value: @order.user.first_name %>
        </div>

        <div class="field">
          <%= shipping_address_fields.label :last_name %><br>
          <%= shipping_address_fields.text_field :last_name, value: @order.user.last_name %>
        </div>          

        <div class="field">
          <%= shipping_address_fields.label :street %><br>
          <%= shipping_address_fields.text_field :street %>
        </div>

        <div class="field">
          <%= shipping_address_fields.label :city %><br>
          <%= shipping_address_fields.text_field :city %>
        </div>

        <div class="field">
          <%= shipping_address_fields.label :country %><br>
          <%= shipping_address_fields.select(:country, options_for_select(@countries, 1)) %>
        </div>

        <div class="field">
          <%= shipping_address_fields.label :zipcode %><br>
          <%= shipping_address_fields.text_field :zipcode %>
        </div>

        <div class="field">
          <%= shipping_address_fields.label :phone %><br>
          <%= shipping_address_fields.text_field :phone %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="col-md-4">
    <p>ORDER TOTAL: $<%= @order.total_price %></p>
  </div>
</div>
