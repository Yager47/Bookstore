<h1><%= t('.title') %></h1>

<div class="row">
  <div class="col-md-12">
	  <% @books.each do |book| %>
	    <p><%= image_tag(book.image_url, size: "150x150") %></p>
	    <p><strong><%= link_to book.title, book %></strong>
	    by <%= "#{book.author.first_name} #{book.author.last_name}" %></p>
	    <p>$<%= book.price %></p>
	  <% end %>

	  <%= paginate @books %>
  </div>
</div>
